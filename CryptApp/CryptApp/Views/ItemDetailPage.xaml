<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CryptApp.Views.ItemDetailPage"
             Title="{Binding Title}">
    <ScrollView >
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Text:" FontSize="Medium" TextColor="Black"/>
            <Label Text="{Binding ItemTitle}" FontSize="Small" TextColor="Black"/>
            <Label Text="Description:" FontSize="Medium" TextColor="Black"/>
            <Editor Text="{Binding Description}" FontSize="Small" TextColor="Black"/>
            <Label Text="UserName:" FontSize="Medium" TextColor="Black"/>
            <Editor Text="{Binding UserName}" FontSize="Small" TextColor="Black"/>
            <Label Text="Email:" FontSize="Medium"  TextColor="Black"/>
            <Editor Text="{Binding Email}" FontSize="Small" TextColor="Black"/>
            <Label Text="Password:" FontSize="Medium" TextColor="Black"/>
            <Editor Text="{Binding Password}" FontSize="Small" TextColor="Black"/>
            <Label Text="Phone:" FontSize="Medium" TextColor="Black"/>
            <Editor Text="{Binding Phone}" FontSize="Small" TextColor="Black"/>
            <Label Text="AdditionalInfo:" FontSize="Medium" TextColor="Black"/>
            <Editor Text="{Binding AdditionalInfo}" FontSize="Small" TextColor="Black"/>
        </StackLayout>
    </ScrollView>
</ContentPage>